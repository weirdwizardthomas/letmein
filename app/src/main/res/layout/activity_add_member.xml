<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".activities.AddMember">

    <TextView
        android:id="@+id/addMember_nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/addMember_nameInput"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/addMember_nameInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addMember_nameInput" />

    <TextView
        android:id="@+id/addMember_roleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/addMember_roleLabel"
        android:text="Role"
        app:layout_constraintBottom_toBottomOf="@+id/addMember_selectRoleSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addMember_selectRoleSpinner" />


    <EditText
        android:id="@+id/addMember_nameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addMember_nameLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addMember_addPictureButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onAddPictureButtonClick"
        android:text="Add picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addMember_roleLabel"
        app:layout_constraintTop_toBottomOf="@+id/addMember_selectRoleSpinner" />

    <Button
        android:id="@+id/addMember_addFingerprintButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="onAddFingeprintButtonClick"
        android:text="Add fingerprint"
        app:layout_constraintEnd_toEndOf="@+id/addMember_addPictureButton"
        app:layout_constraintStart_toStartOf="@+id/addMember_addPictureButton"
        app:layout_constraintTop_toBottomOf="@+id/addMember_addPictureButton" />

    <Spinner
        android:id="@+id/addMember_selectRoleSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addMember_nameInput"
        app:layout_constraintTop_toBottomOf="@+id/addMember_nameInput" />
</androidx.constraintlayout.widget.ConstraintLayout>